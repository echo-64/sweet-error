{
  "name": "sweet-error",
  "version": "2.0.0",
  "description": "Makes nodeJs Error cleaner, more readable and better formatted",
  "author": "ùñäùñàùñçùñî <https://github.com/echo-64>",
  "license": "MIT",
  "main": "./dist/SweetError.js",
  "module": "./dist/SweetError.mjs",
  "types": "./dist/types/SweetError.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/SweetError.d.ts",
      "require": "./dist/SweetError.js",
      "import": "./dist/SweetError.mjs"
    }
  },
  "files": [
    "./dist",
    "./LICENSE",
    "./README.md",
    "./screenshots",
    "./CHANGELOG.md",
    "./CONTRIBUTING.md",
    "./package-lock.json"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/echo-64/sweet-error.git"
  },
  "scripts": {
    "clean": "rm -rf ./dist/*",
    "watch": "rollup -c -w",
    "build:docs": "npx tsup",
    "build": "npm run clean && rollup -c && npm run build:docs"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^25.0.3",
    "@types/stack-utils": "^2.0.3",
    "tslib": "^2.8.1",
    "tsup": "^8.5.1"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "json5": "^2.2.3",
    "stack-utils": "^2.0.6"
  }
}
